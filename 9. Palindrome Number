class Solution {
    public boolean isPalindrome(int x) {
        int m=0;
        int number = x;
        while(x>0){
            int rem = x % 10;
            m = m*10+rem;
            x= x/10; 
        }
        if (number==m){
            return true;
        }        
        else{
            return false;
        }
    }
}
